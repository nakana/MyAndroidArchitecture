<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="project_name"
                android:text="project.name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/languages0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="project_language"
                android:text="String.format(@string/languages, project.language)"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/project_watchers0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="project_watchers"
                android:text="String.format(@string/watchers, project.watchers)"
                android:textSize="16sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

